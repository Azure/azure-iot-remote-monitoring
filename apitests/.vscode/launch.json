{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Tests",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/jasmine-node/bin/jasmine-node",
            "stopOnEntry": false,
            "args": [
                "dist",
                "--verbose"
